{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser-ce/typescript/phaser.d.ts",
      "node_modules/phaser-ce/typescript/pixi.d.ts",
      "node_modules/phaser-ce/typescript/p2.d.ts"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ]
}